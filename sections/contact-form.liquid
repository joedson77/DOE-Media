        @media (max-width: 768px) {
            .form-group {
                flex: 1 0 calc(100% - 30px);
            }
            
            .date-fields {
                flex-direction: column;
                gap: 0;
            }
            
            .contact-header h2 {
                font-size: 2.2rem;
            }
            
            .contact-header p {
                font-size: 1.1rem;
            }
        }
        
        .decoration {
